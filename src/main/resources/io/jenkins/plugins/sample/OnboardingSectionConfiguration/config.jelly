<?jelly escape-by-default='true'?>
<j:jelly xmlns:j="jelly:core" xmlns:f="/lib/form" xmlns:st="jelly:stapler">
<f:section title="Onboarding Section">
    <f:entry title="Name" field="name">
        <f:textbox />
    </f:entry>
    <f:entry title="Description" field="description">
        <f:textarea />
    </f:entry>
    <f:advanced title="Connection Options">
        <f:entry title="URL">
            <f:textbox field="url" />
        </f:entry>
        <f:entry title="Username">
            <f:textbox field="username" />
        </f:entry>
        <f:entry title="Password">
            <f:password field="password" />
        </f:entry>
        <f:validateButton
                title="${%Test Connection}" progress="${%Testing...}"
                method="testConnection" with="username,password,url" />
        <f:validateButton
                title="${%Test Payload}" progress="${%Testing...}"
                method="testPayload" with="username,password,url" />
    </f:advanced>
</f:section>
</j:jelly>